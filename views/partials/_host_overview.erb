<%
def risk_to_color(risk)
  if risk == 0
    return "success"
  elsif risk == 1
    return "warning"
  elsif risk == 2
    return "danger"
  else
    return "dark"
  end
end
%>

<table class="table table-hover table-condensed table-bordered host-overview selectable">
  <thead>
    <tr>
      
    </tr>
  </thead>
  <tbody>
  	<% @hosts.each_slice(4).to_a.each do |host_slice| %>
  	  <tr>
  	    <% host_slice.each do |host| %>
  	      <% bg = risk_to_color(host.risk) %>
  	        <td class="text-center table-<%= bg %>" host-id="<%= host.id %>">
  	          <a href="#hosts-<%= host.id %>" style="color:white;"><%= host.ip %></a></br>
  	        </td>
  	    <% end %>
  	  </tr>
  	<% end %>
  </tbody>
</table>


<div class="container">
  <h4>Actions</h4>
  <div class="row">
    <div class='col-sm-6'>    
      <button class="btn hosts-to-nmap">Send to nmap</button>
    </div>
    <div class='col-sm-6'>
      
    </div>
  </div>
</div>