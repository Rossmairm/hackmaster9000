<%
def risk_to_color(risk)
  if risk == 0 || risk == nil
    return "secondary"
  elsif risk == 1
    return "info"
  elsif risk == 2
    return "warning"
  elsif risk == 3
    return "danger"
  else
    return ""
  end
end
%>

<% if (web_applications.size > 0) %>
  <div class="text-center">
    <h4>Web Screenshots</h4>
  </div>
  <table class="table table-hover table-condensed table-bordered">
    <thead>
      <tr>
        
      </tr>
    </thead>
    <tbody>
      <% web_applications.each_slice(1).to_a.each do |web_application_slice| %>
        <tr>
          <% web_application_slice.each do |web_application| %>
            <td class="table-<%= risk_to_color(web_application.risk) %> text-center host-web-application-<%= web_application.id %>">
              <a href="#web-applications-<%= web_application.id %>" class="hash-nav">
                <img style="width:300px;height:168pxclass="" onerror="this.style.display='none';" src="/ss/<%= "#{web_application.scheme}#{Domain.find(web_application.domain_id).domain_name}#{Service.find(web_application.service_id).port_number}" %>-ss.png" >
              </a>
              </br>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>