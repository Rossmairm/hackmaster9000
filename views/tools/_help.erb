  def hash_to_html(hash)
    list = "<div class='list-group list-group-root well'>"
      hash.each do |key, value|
        list = list + '<a href="#tab-'+key+'" class="list-group-item hash-nav">' +
                            '<div data-toggle="tooltip" title="'+value+'">' +
                            key.to_s + '</div>' +
                          '</a>'
      end
    list = list + "</div>"
    return list
  end

